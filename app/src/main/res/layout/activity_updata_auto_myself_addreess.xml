<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.automap.UpdataAutoMyselfAddreess">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:padding="10dp">

        <!--<ImageView-->
        <!--android:id="@+id/person_regist_back"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:src="@drawable/fanhuianjian" />-->
        <TextView
            android:id="@+id/auto_address_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="@dimen/shiliu" />

        <TextView
            android:id="@+id/auto_address_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="常用地址"
            android:textColor="@color/white"
            android:textSize="16sp" />
        <TextView
            android:gravity="center"
            android:id="@+id/auto_address_modify"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="修改"
            android:textColor="@color/white"
            android:textSize="@dimen/shiliu" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/auto_myslef_rl"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_margin="10dp">

        <TextView
            android:id="@+id/auto_myslef"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="常用地址：" />
        <TextView
            android:layout_alignLeft="@+id/auto_myslef"
            android:id="@+id/auto_myslef_txt"
            android:paddingLeft="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="地址" />
        <ImageView
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/biaoqian" />
    </RelativeLayout>
</LinearLayout>