<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    tools:context=".activity.BindingZhifubaoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:padding="10dp">

            <ImageView
                android:id="@+id/zhifubao_fanhui"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/back"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="添加支付宝账号"
                android:textColor="@color/white"
                android:textSize="@dimen/shiliu" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/vip8"/>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:layout_gravity="center_vertical"
                android:text="开户名:"
                />
            <EditText
                android:theme="@style/MyEditText"
                android:id="@+id/zhifubao_kaihuming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:hint="请输入开户名"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/shier" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/vip8"/>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/shisi"
                android:text="支付宝账号:"
                />
            <EditText
                android:theme="@style/MyEditText"
                android:id="@+id/zhifubao_zhanghao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:hint="请输入支付宝账号"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/shier" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/vip8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:paddingLeft="40dp"
            android:background="@color/white"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/shisi"
                android:text="再次输入账号:"
                />
            <EditText
                android:theme="@style/MyEditText"
                android:id="@+id/zhifubao_aginzhanghao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                android:hint="请次输入账号"
                android:maxLines="1"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/shier" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/vip8"/>


        <TextView
            android:id="@+id/zhifubao_tijiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="15sp"
            android:layout_marginTop="40dp"
            android:background="@drawable/corners_small_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="提    交"
            android:textColor="@color/white"
            android:textSize="@dimen/shisi" />
    </LinearLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/shier"
            android:textStyle="bold"
            android:textColor="#6CD294"
            android:text="注意事项:"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="@dimen/shier"
            android:text="1.请输入正确的银行卡号，否则会导致提现失败"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/shier"
            android:text="2.请确保输入的身份证号和银行卡号属于同一人,否则会导致提现失败(例：张三添加了李四的银行卡)；"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/shier"
            android:text="3.请确保银行卡号和开卡地区一致，否则会导致提现失败（例:北京银行卡号填写成了石家庄）；"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="@dimen/shier"
            android:text="4.身份信息提交以后将不可修改"
            />

    </LinearLayout>


</RelativeLayout>