<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mingxi_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="6dp"
        android:background="@color/lightGray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:textSize="@dimen/ten"
        android:textColor="@color/white"
        android:text="2018-09-23"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/mingxi_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shisi"
            android:textColor="@color/black"
            android:text="账户:"/>

        <TextView
            android:visibility="gone"
            android:id="@+id/mingxi_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/shisi"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:text="+3.55"/>


        <TextView

            android:id="@+id/mingxi_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shier"
            android:layout_alignParentRight="true"
            android:text="成功"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/mingxi_item_money"/>

    </RelativeLayout>
</LinearLayout>
