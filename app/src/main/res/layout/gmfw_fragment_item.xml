<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/gmfw_item_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@mipmap/logo_zhanwei" />

        <TextView
            android:id="@+id/gmfw_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gmfw_item_img"
            android:text="房屋装修"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/gmfw_item_dingwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gmfw_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/gmfw_item_img"
            android:background="@drawable/dingwei" />

        <TextView
            android:id="@+id/gmfw_item_dizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gmfw_item_title"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/gmfw_item_dingwei"
            android:text="河北省石家庄市逛街区"
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:id="@+id/gmfw_item_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gmfw_item_dizhi"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/gmfw_item_img"
            android:background="@drawable/shape_green_btn"
            android:padding="5dp"
            android:gravity="center"
            android:text="8.75km"
            android:textColor="@color/green"
            android:textSize="10sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/gmfw_item_img"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_button"
            android:padding="5dp"
            android:text="企业版"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/vip8" />

    <TextView
        android:id="@+id/gmfw_item_xiangmu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务项目:北海花园纳斯达克哈哈"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/gmfw_item_yaoqiu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="项目要求:哈哈哈哈哈哈哈哈哈哈哈哈哈哈"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/gmfw_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="开工时间:2018-09-10"
        android:textColor="@color/green"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/gmfw_item_wangongtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="完工时间:2018-09-10"
        android:textColor="@color/green"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/vip8" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gmfw_item_tuijian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/corners_small_bg"
            android:padding="8dp"
            android:text="电话"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/gmfw_item_youhaoyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/gmfw_item_tuijian"
            android:background="@drawable/corners_small_bg"
            android:padding="8dp"
            android:text="私聊"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>
