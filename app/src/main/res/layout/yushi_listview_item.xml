<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/vip8"/>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <com.zx.zhuangxiu.view.RoundImageView
            android:id="@+id/yushi_item_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@mipmap/logo_zhanwei"/>

            <TextView
                android:id="@+id/yushi_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/shisi"
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/yushi_item_img"
                android:text="弥勒佛玉石2018年佳品弥勒佛玉石"
                android:textStyle="bold"/>

        <TextView
            android:id="@+id/yushi_item_xiaotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shier"
            android:layout_toRightOf="@+id/yushi_item_img"
            android:layout_below="@+id/yushi_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginRight="25dp"
            android:text="内容内容哈哈哈哈哈哈"/>

        <TextView
            android:id="@+id/yushi_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shisi"
            android:textColor="@color/green"
            android:layout_toRightOf="@+id/yushi_item_img"
            android:layout_alignBottom="@+id/yushi_item_img"
            android:layout_marginLeft="10dp"
            android:text="￥78"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/biaoqian"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/dz_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dingwei"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"/>

        <TextView

            android:id="@+id/yushi_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址: 河北省石家庄市中华世纪大街"
            android:layout_toRightOf="@+id/dz_img"
            android:layout_marginTop="2dp"
            android:textSize="@dimen/shier"
            android:textColor="@color/black"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/vip8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/yushi_ll_zan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zan"/>

            <TextView
                android:id="@+id/yushi_item_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="478978"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/yushi_item_pl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pinglun"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评论"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/homeyushi_fenxiang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fenxiang"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分享"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="@color/black"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
