<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.HomeXiaoXiActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/green">

        <!--<ImageView-->
            <!--android:id="@+id/home_xiaoxi_back"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/fanhuianjian"-->
            <!--android:layout_centerVertical="true"/>-->
        <TextView
            android:id="@+id/home_xiaoxi_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="@dimen/shiliu"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shiliu"
            android:textColor="@color/white"
            android:text="我的消息"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="10dp"
      android:background="@drawable/vip8"/>

    <LinearLayout
        android:id="@+id/home_xiaoxi_tongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >

       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/ttttt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/tongzhi"/>

       </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统通知"
            android:textSize="@dimen/shisi"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/vip8"/>

    <LinearLayout
        android:id="@+id/home_xiaoxi_youhui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/youhui"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠活动"
            android:textSize="@dimen/shisi"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/vip8"/>

    <LinearLayout
        android:id="@+id/home_xiaoxi_tuisong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tuisong"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="活动专题推送"
            android:textSize="@dimen/shisi"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>

</LinearLayout>