<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/pinglun_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/shier"
            android:textColor="@color/black"
            android:text="姓名"/>

        <TextView
            android:id="@+id/pinglun_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="评论时间"
            android:textSize="@dimen/ten" />

        <View
            android:id="@+id/pinglun_item_xian"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/pinglun_item_title"
            android:background="@drawable/vip8"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/pinglun_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/ten"
            android:text="内容"
            android:layout_below="@+id/pinglun_item_xian"/>

    </RelativeLayout>

</LinearLayout>
