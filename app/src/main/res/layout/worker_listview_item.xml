<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/worker_item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.zx.zhuangxiu.view.RoundImageView
                android:id="@+id/worker_item_touxiang"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@mipmap/logo_zhanwei" />

            <TextView
                android:id="@+id/worker_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="32dp"
                android:layout_toRightOf="@+id/worker_item_touxiang"
                android:text=""
                android:textSize="@dimen/shiliu"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nianling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/worker_item_touxiang"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="年龄:"
                android:textColor="@color/gray"
                android:textSize="@dimen/shisi" />

            <TextView
                android:id="@+id/worker_item_nianling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/worker_item_touxiang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/nianling"
                android:text=""
                android:textSize="@dimen/shisi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/xingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/worker_item_touxiang"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/worker_item_nianling"
                android:text="性别:"
                android:textSize="@dimen/shisi" />

            <TextView
                android:id="@+id/worker_item_xingbie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/worker_item_touxiang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/xingbie"
                android:text=""
                android:textSize="@dimen/shisi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ruwang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/worker_item_touxiang"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/worker_item_xingbie"
                android:text="入网工龄:"
                android:textSize="@dimen/shisi" />

            <TextView
                android:id="@+id/worker_item_gongling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/worker_item_touxiang"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ruwang"
                android:text=""
                android:textSize="@dimen/shisi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/work_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nianling"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="工种："
                android:textSize="@dimen/shisi" />
            <TextView
                android:id="@+id/work_types"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nianling"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/work_type"
                android:text=""
                android:textSize="@dimen/shisi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suozaidi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_type"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="所在地:"
                android:textSize="@dimen/shisi" />

            <TextView
                android:id="@+id/worker_item_suozaidi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_type"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/suozaidi"
                android:text=""
                android:textSize="@dimen/shisi"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gerenkongjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suozaidi"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:text="个人技能:"
                android:textSize="@dimen/shisi" />

            <TextView
                android:id="@+id/worker_item_gerenkongjian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/suozaidi"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/gerenkongjian"
                android:text=""
                android:textSize="@dimen/shisi"
                android:textStyle="bold" />
        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/dingwei" />

            <TextView
                android:id="@+id/worker_item_dingweiaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:text=""
                android:textSize="@dimen/shisi" />
        </LinearLayout>
        <TextView
            android:id="@+id/shouye_worker_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:text="发起时间"
            android:textSize="@dimen/shier" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/gray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/worker_dianzanll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/zan_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zan" />

                <TextView
                    android:id="@+id/workers_item_zan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="478978"
                    android:textColor="@color/black"
                    android:textSize="@dimen/shisi" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/worker_pinglunll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chanpin_item_commment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pinglun" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="评论"
                    android:textColor="@color/black"
                    android:textSize="@dimen/shisi" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/worker_fenxiang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:descendantFocusability="blocksDescendants"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fenxiang" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="分享"
                    android:textColor="@color/black"
                    android:textSize="@dimen/shisi" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>