<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/vip8" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/sousuo_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:background="@mipmap/logo_zhanwei" />

        <TextView
            android:id="@+id/sousuo_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sousuo_img"
            android:text="------"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sousuo_xiaotitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sousuo_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/sousuo_img"
            android:text="-------"
            android:maxLines="3"
            android:ellipsize="end"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/sousuo_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/sousuo_img"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/sousuo_img"
            android:text="ï¿¥78"
            android:textColor="@color/green"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
