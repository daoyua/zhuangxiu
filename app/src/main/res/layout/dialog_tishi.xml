<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/dialog_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tishitop"/>

    <ImageView
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close"
        android:layout_alignRight="@+id/dialog_img"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>


    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="温馨提示"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_below="@+id/dialog_img"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/dialog_xiaotitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialog_title"
        android:singleLine="false"
        android:text="@string/dialog_xiaotitle"
        android:textSize="@dimen/shier"
        android:textColor="@color/black"
        android:layout_centerInParent="true"/>

    <Button
        android:id="@+id/dialog_ok"
        android:text="好的"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/orage_corner_bg"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/dialog_xiaotitle"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
